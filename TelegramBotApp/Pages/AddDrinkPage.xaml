<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TelegramBotApp.AddDrinkPage">

    <StackLayout Padding="20">
        <Label Text="Добавить новый напиток" FontSize="20" />

        <Label Text="Название" />
        <Entry x:Name="DrinkNameEntry" />

        <Label Text="Цена" />
        <Entry x:Name="DrinkPriceEntry" Keyboard="Numeric" />

        <Label Text="Количество" />
        <Entry x:Name="DrinkStockEntry" Keyboard="Numeric" />

        <Button Text="Сохранить" Clicked="OnSaveDrinkButtonClicked" />
    </StackLayout>

</ContentPage>
